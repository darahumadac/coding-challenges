pipeline {
    agent any

    stages {
        stage('Install dependencies'){
            steps {
                sh 'apt-get update \
                    && apt-get install -y build-essential \
                    && apk add dotnet8-sdk \
                    && echo "Done installing dependencies"'
            }
        }

        stage('Run Tests'){
            steps{
                dir('urlShortener'){
                    sh 'make test'
                }
            }
        }

        stage('Build images'){
            steps{
                dir('urlShortener'){
                    sh 'make build-images'
                }
            }
        }
    }
}