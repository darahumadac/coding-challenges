pipeline {
    agent any
    stages {
        stage('Install dependencies'){
            steps {
                sh 'apt-get update \
                    && apt-get install -y build-essential \
                    && apk add dotnet8-sdk \
                    && echo "Done installing dependencies"'
            }
        }

        stage('Run Tests'){
            agent { docker {image 'mcr.microsoft.com/dotnet/sdk:8.0'}}
            steps{
                sh 'apt-get update \
                    && apt-get install -y build-essential \
                    && echo "Done installing dependencies"'
                    
                dir('urlShortener'){
                    sh 'make test'
                }
            }
        }

        stage('Build images'){
            agent any
            steps{
                sh 'apt-get update \
                    && apt-get install -y build-essential \
                    && echo "Done installing dependencies"'

                dir('urlShortener'){
                    sh 'make build-images'
                }
            }
        }
    }
}