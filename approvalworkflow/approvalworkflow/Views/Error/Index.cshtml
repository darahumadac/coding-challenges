@model StatusCodeViewModel

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="text-center">
        <h1 class="display-1 fw-bold text-primary">@Model.StatusCode</h1>
        <p class="fs-3"> <span class="text-danger">@Model.DangerText</span> @Model.Description</p>
        <p class="lead">
            @Model.Lead
        </p>
        <a href="/" class="btn btn-primary btn-lg mt-3">
            <i class="bi bi-house-door-fill me-2"></i> Back to Home
        </a>
    </div>
</div>